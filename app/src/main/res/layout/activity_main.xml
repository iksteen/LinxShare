<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Linx URL:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_linx_url"
            app:layout_constraintTop_toTopOf="@+id/et_linx_url"
            app:layout_constraintBottom_toBottomOf="@+id/et_linx_url"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/et_linx_url"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_linx_url"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/et_api_key"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="272dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/tv_linx_url"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Delete key:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete_key"
            app:layout_constraintTop_toTopOf="@+id/et_delete_key" app:layout_constraintBottom_toBottomOf="@+id/et_delete_key"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_delete_key" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_linx_url" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_linx_url"/>
    <TextView
            android:text="Expiration:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_expiration"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_expiration" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_delete_key" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_expiration" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_delete_key" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_delete_key"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_upload" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <CheckBox
            android:text="Randomize filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_randomize_filename" app:layout_constraintStart_toStartOf="@+id/spinner_expiration"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/spinner_expiration"/>
    <TextView
            android:text="Filename:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_filename"
            app:layout_constraintBottom_toBottomOf="@+id/etFilename" app:layout_constraintTop_toTopOf="@+id/etFilename"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/etFilename" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cb_randomize_filename" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cb_randomize_filename"/>
    <TextView
            android:text="Api Key:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_api_key" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_filename"/>

</androidx.constraintlayout.widget.ConstraintLayout>